@model Data.Models.Ninja

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>

<div>
    <hr />
    <p>
        Gold in wallet: @Html.DisplayFor(model => model.Gold)
    </p>
    <p>
        Total strength: @ViewData["TotalStrength"]
        <br />
        Total Agility: @ViewData["TotalAgility"]
        <br />
        Total Intelligence: @ViewData["TotalIntelligence"]
    </p>
    <p>
        Gear Value: 
    </p>
    <section class="layout" style="width:100%;display:flex;gap:16px;">
        <div class="grow1" style="flex-grow:1;">
            <div class="head" style="border:solid;">
                Head:
                <br />
                Strength:
                <br />
                Agility:
                <br />
                Intelligence:
            </div>
            <br />
            <div class="hand" style="border:solid;">
                Hands:
                <br />
                Strength:
                <br />
                Agility:
                <br />
                Intelligence:
            </div>
            <br />
            <div class="feet" style="border:solid;">
                Feet:
                <br />
                Strength:
                <br />
                Agility:
                <br />
                Intelligence:
            </div>
        </div>
        <div class="grow1" style="flex-grow:1;">
            <img src="~/images/ninja.png" alt="Ninja Image" />
        </div>
        <div class="grow1" style="flex-grow:1;">
            <div class="necklace" style="border:solid;">
                Necklace:
                <br />
                Strength:
                <br />
                Agility:
                <br />
                Intelligence:
            </div>
            <br />
            <div class="chest" style="border:solid;">
                Chest:
                <br />
                Strength:
                <br />
                Agility:
                <br />
                Intelligence:
            </div>
            <br />
            <div class="ring" style="border:solid;">
                Ring:
                <br />
                Strength:
                <br />
                Agility:
                <br />
                Intelligence:
            </div>
        </div>
    </section>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
